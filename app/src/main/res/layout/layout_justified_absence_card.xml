<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/justified_card"
    android:layout_marginBottom="18dp"
    android:padding="20dp"
    android:baselineAligned="false">

    <!--Type and from-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <!--Type of absence-->
        <TextView
            android:id="@+id/justified_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/carmen_sans_semibold"
            android:layout_gravity="top"/>

        <!--Date and time of absence FROM-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <!--from :-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from: "
                android:textSize="12sp"
                android:fontFamily="@font/carmen_sans_bold"/>

            <!--date-->
            <TextView
                android:id="@+id/justified_date_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/carmen_sans_regular"/>

            <!--at: -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  at: "
                android:textSize="12sp"
                android:fontFamily="@font/carmen_sans_bold"/>

            <!--to-->
            <TextView
                android:id="@+id/justified_time_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/carmen_sans_regular"/>

        </LinearLayout>

        <!--Date and time of absence TO-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <!--from :-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to: "
                android:textSize="12sp"
                android:fontFamily="@font/carmen_sans_bold"/>

            <!--date-->
            <TextView
                android:id="@+id/justified_date_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/carmen_sans_regular"/>

            <!--at: -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  at: "
                android:textSize="12sp"
                android:fontFamily="@font/carmen_sans_bold"/>

            <!--to-->
            <TextView
                android:id="@+id/justified_time_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/carmen_sans_regular"/>

        </LinearLayout>

        <!--Justification absence-->
        <TextView
            android:id="@+id/justified_justification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="#535353"/>

    </LinearLayout>

    <!--Right column-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical">

        <!--Not justified-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/justified"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/green"
            android:fontFamily="@font/carmen_sans_bold"/>

        <!--date-->
        <TextView
            android:id="@+id/justified_date_from2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/carmen_sans_regular"/>

        <!--Justified icon-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_justified"/>


    </LinearLayout>

</LinearLayout>